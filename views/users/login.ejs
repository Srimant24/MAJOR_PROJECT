    margin-top: 1.2rem;
    font-size: 1.2rem;
    margin-right: 1rem;
}


.f-info{
    text-align: center;
    display: flex;
    height: 8rem;
    background-color:#ebebeb ;
    flex-wrap: wrap;
    justify-content: center;
    align-items: space-evenly;
}
.listing-card{
    border: none !important;
    margin-bottom: 2rem;
