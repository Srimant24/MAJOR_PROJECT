    <style>
         body{
    font-family: 'Plus Jakarta Sans', sans-serif !important;
}

.navbar{
    height: 5rem;
}
.fa-compass{
    color: #fe424d;
    font-size: 2rem;
}

.nav-link{
    color: #222222 !important;
}
.foot{
    margin-top: auto;
}
.f-info-links a {
    text-decoration: none;
    color: #222222;
}

.f-info-links a:hover {
    text-decoration: none;
}

.f-info-links{
    width: 100%;
}
.f-info-socials{
    width: 100%;
    align-items: center;
    justify-content: center;
}
